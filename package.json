{
  "name": "oh-my-prompt",
  "displayName": "Oh My Prompt",
  "description": "A VSCode extension for managing multiple AI prompts",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.86.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "oh-my-prompt.createPrompt",
        "title": "Oh My Prompt: Create New Prompt"
      },
      {
        "command": "oh-my-prompt.selectGlobalPrompt",
        "title": "Oh My Prompt: Select Global Prompt"
      },
      {
        "command": "oh-my-prompt.selectProjectPrompt",
        "title": "Oh My Prompt: Select Project Prompt"
      },
      {
        "command": "oh-my-prompt.importPendingRules",
        "title": "Oh My Prompt: Import Modified IDE Rules"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch ",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/prettyjson": "^0.0.33",
    "@types/vscode": "^1.86.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-file-header": "^0.0.1",
    "eslint-plugin-header": "^3.1.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.10.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "handlebars-loader": "^1.7.3",
    "moment": "^2.30.1",
    "ts-loader": "^9.5.1",
    "typescript": "^5.7.2",
    "webpack": "^5.95.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@oh-my-commit/shared": "^0.26.5",
    "reflect-metadata": "^0.2.2",
    "typedi": "^0.10.0",
    "inversify": "^6.0.1",
    "@iarna/toml": "^2.2.5",
    "prettyjson": "^1.2.5"
  }
}
